{
  "$schema": "https://railway.app/railway.schema.json",
  "services": [
    {
      "name": "backend",
      "rootDir": "backend",
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install",
        "startCommand": "node server.js"
      },
      "deploy": {
        "startCommand": "node server.js"
      }
    },
    {
      "name": "frontend",
      "rootDir": "frontend",
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install && npm run build",
        "outputDirectory": "dist"
      }
    }
  ]
}